" Enable syntax highlighting.
syntax on 

" Enable line numbers.
set number 

" Always show tab bar.
set showtabline=2 

 " Do not wrap lines.
set nowrap

" Always show status line
set laststatus=2 

" Allow backspace
set backspace=indent,eol,start

" Show the cursor position
set ruler

" Show the filename in the window titlebar
set title